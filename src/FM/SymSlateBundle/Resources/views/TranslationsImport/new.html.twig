{% extends '::base.html.twig' %}

{% block body %}

<form action="{{ path('translationsimports_create') }}" method="post" {{ form_enctype(form) }}>
	<legend>Import a translation pack</legend>
	<fieldset>
	    {{ form_widget(form) }}

	    {% if is_granted('ROLE_SUPER_ADMIN') %}
	    	<select name="force_actualize">
	    		<option value="0">Regular import</option>
	    		<option value="1">This pack takes precedence</option>
	    	</select>
	    	<BR/>
	    {% endif %}
	    
	    <button type="submit" class="btn">Create</button>
	   
    </fieldset>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('translationsimports') }}">
            Back to the list
        </a>
    </li>
</ul>

{% endblock %}