{% extends '::base.html.twig' %}



{% block body %}

<h1>Country list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Iso_code</th>
            <th>Ps_code</th>
            <th>Map_code</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('countries_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.isocode }}</td>
            <td>{{ entity.pscode }}</td>
            <td>{{ entity.mapcode }}</td>
            <td>{{ entity.name }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('countries_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('countries_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('countries_new') }}">
            Create a new entry
        </a>
    </li>
</ul>

{% endblock %}


