{% extends '::base.html.twig' %}

{%  block body %}
	<h1>Pack</h1>
	
	<table class="record_properties">
	    <tbody>
	        <tr>
	            <th>Id</th>
	            <td>{{ entity.id }}</td>
	        </tr>
	        <tr>
	            <th>Project</th>
	            <td>{{ entity.project }}</td>
	        </tr>
	        <tr>
	            <th>Name</th>
	            <td>{{ entity.name }}</td>
	        </tr>
	        <tr>
	            <th>Version</th>
	            <td>{{ entity.version }}</td>
	        </tr>
	    </tbody>
	</table>
	
	<table>
	
		<tr>
			<th></th>
			{%  for cat in stats['categories'] %}
				<th>{{ cat | default("Overall")}}</th>
			{%  endfor %}
		</tr>
		{% for language, statistics in stats['statistics'] %}
			<tr>
				<th>{{ language }}</th>
				{%  for cat in stats['categories'] %}
					<td>{{ '%.1f' | format(statistics[cat]['percent']) }}%<br/>({{ statistics[cat]['translated'] }}/{{ statistics[cat]['total'] }})</td>
				{%  endfor %}
			</tr>
		{% endfor %}
		
	</table>
	
	<ul class="record_actions">
	    <li>
	        <a href="{{ path('packs') }}">
	            Back to the list
	        </a>
	    </li>
	    <li>
	        <a href="{{ path('packs_edit', { 'id': entity.id }) }}">
	            Edit
	        </a>
	    </li>
	    <li>
	        <form action="{{ path('packs_delete', { 'id': entity.id }) }}" method="post">
	            {{ form_widget(delete_form) }}
	            <button type="submit">Delete</button>
	        </form>
	    </li>
	</ul>
{% endblock %}
