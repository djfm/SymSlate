{% extends '::base.html.twig' %}

{%  block body %}

<h1>PackExport</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Pack_id</th>
            <td>{{ entity.packid }}</td>
        </tr>
        <tr>
            <th>Language_id</th>
            <td>{{ entity.languageid }}</td>
        </tr>
        <tr>
            <th>Filepath</th>
            <td>{{ entity.filepath }}</td>
        </tr>
        <tr>
            <th>Created</th>
            <td>{{ entity.created|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Created_by</th>
            <td>{{ entity.createdby }}</td>
        </tr>
    </tbody>
</table>

<p>
	<a href="{{ asset(entity.getWebPath()) }}">download exported pack</a>
</p>

<ul class="record_actions">
    <li>
        <a href="{{ path('export') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('export_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('export_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>

{% endblock %}